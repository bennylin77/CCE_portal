	  <div class="show_title">
	  	學校(學分班為15%)
	  </div>
	  <div class="show_content">
	  <%= @cce_class.school_expenses%> NT
	  (約佔經費來源  <%= ((@cce_class.school_expenses.to_f/(@cce_class.total_tuition+@cce_class.grants.to_i+@cce_class.other_funds.to_i))*100).round(2) %>%)  		
	  </div>         	
  </div>
  <div class="show_row">
	  <div class="show_title">
	  	教務處  
	  </div>
	  <div class="show_content">
	  <%= @cce_class.academic_expenses%> NT	
	  (約佔經費來源  <%= ((@cce_class.academic_expenses.to_f/(@cce_class.total_tuition+@cce_class.grants.to_i+@cce_class.other_funds.to_i))*100).round(2) %>%)  			  
	  </div>         	
  </div>
  <div class="show_row">
	  <div class="show_title">
	  	各中心  
	  </div>
	  <div class="show_content">
	  <%= @cce_class.center_expenses%> NT
	  (約佔經費來源  <%= ((@cce_class.center_expenses.to_f/(@cce_class.total_tuition+@cce_class.grants.to_i+@cce_class.other_funds.to_i))*100).round(2) %>%)  			  	
	  </div>         	
  </div>
  <div class="show_row">
	  <div class="show_title">
	  	各學院   
	  </div>
	  <div class="show_content">
	  <%= @cce_class.college_expenses%> NT	
	  (約佔經費來源  <%= ((@cce_class.college_expenses.to_f/(@cce_class.total_tuition+@cce_class.grants.to_i+@cce_class.other_funds.to_i))*100).round(2) %>%)  			  
