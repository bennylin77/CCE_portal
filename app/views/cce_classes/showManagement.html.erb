	  <div class="show_content">
	  <%=@cce_class.school_expenses+@cce_class.academic_expenses+@cce_class.center_expenses+
	  @cce_class.college_expenses+@cce_class.department_expenses+@cce_class.school_venue_fee+
	  @cce_class.units_venue_fee+@cce_class.personnel_fee+@cce_class.sales_fee+@cce_class.travel_fee+
	  @cce_class.facilities_fee+@cce_class.hourly_fee%> NT	
