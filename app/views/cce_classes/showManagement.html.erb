<div class="function_title">推廣教育課程</div>
<div class="function_field">
<%= link_to '回推廣教育課程列表', { controller: 'cce_classes', action: 'indexManagement' }, class: 'function_button' %>
<%= link_to '編輯', edit_cce_class_path(@cce_class), class: 'function_button' %>
        <%if @cce_class.verified%>
	        <%unless User.find(session[:user_id]).identity!=GLOBAL_VAR['identity_CCE'] %>
	        <%= link_to '取消通過', {controller: :cce_classes, action: :verified, id: @cce_class.id }, class: 'function_button' %>
	        <%end%>
       		<%= link_to '續開相同課程', {controller: :cce_classes, action: :new, id: @cce_class.id}, class: 'function_button' %>        
        <%else%>
	        <%unless User.find(session[:user_id]).identity!=GLOBAL_VAR['identity_CCE'] %>
	        <%= link_to '通過', {controller: :cce_classes, action: :verified, id: @cce_class.id },  class: 'function_button'%>        
	        <%end%>
        <%end%>	  	
<%= link_to '產生會簽單', { controller: 'cce_classes', action: 'signsheet', id: @cce_class.id  }, class: 'function_button' %>         
<%= link_to '刪除', @cce_class, method: :delete, class: 'function_del_button', data: { confirm: '您確定要刪除 '+@cce_class.title+' ?' } %>	  	         
</div>
<section class="show_table">
  <div class="show_row">
	  <div class="show_title">
	  	課程名稱
	  </div>
	  <div class="show_content">	
